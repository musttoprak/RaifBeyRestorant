<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/otpActivitiyLl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/white"
    android:gravity="center|top"
    android:orientation="vertical"
    tools:context=".view.OtpActivity">

    <ImageView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:src="@drawable/otpvefiy" />

    <TextView
        android:id="@+id/phoneLble"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Giriş izni"
        android:textAlignment="center"
        android:textColor="#0060DA"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Telefon Numaranızı Doğrulamak İçin Telefona Gelen Kodunu Girin..."
        android:textAlignment="center"
        android:textColor="@color/cardview_dark_background"
        android:textSize="13sp"
        android:textStyle="normal" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardElevation="10dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="15dp"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:orientation="horizontal"
                android:weightSum="6">

                <EditText
                    android:id="@+id/code1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/backgrounds_shapes"
                    android:ems="1"
                    android:gravity="center"
                    android:hint="0"
                    android:inputType="number"
                    android:maxLength="1"
                    android:maxLines="1"
                    android:padding="10dp"
                    android:textColor="#000000"
                    android:textColorHint="#808080"
                    android:textSize="17sp"
                    tools:ignore="TouchTargetSizeCheck,DuplicateSpeakableTextCheck" />

                <EditText
                    android:id="@+id/code2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/backgrounds_shapes"
                    android:ems="1"
                    android:gravity="center"
                    android:hint="0"
                    android:inputType="number"
                    android:maxLength="1"
                    android:maxLines="1"
                    android:padding="10dp"
                    android:textColor="#000000"
                    android:textColorHint="#808080"
                    android:textSize="17sp"
                    tools:ignore="TouchTargetSizeCheck,TextContrastCheck" />

                <EditText
                    android:id="@+id/code3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/backgrounds_shapes"
                    android:ems="1"
                    android:gravity="center"
                    android:hint="0"
                    android:inputType="number"
                    android:maxLength="1"
                    android:maxLines="1"
                    android:padding="10dp"
                    android:textColor="#000000"
                    android:textColorHint="#808080"
                    android:textSize="17sp"
                    tools:ignore="TouchTargetSizeCheck" />

                <EditText
                    android:id="@+id/code4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/backgrounds_shapes"
                    android:ems="1"
                    android:gravity="center"
                    android:hint="0"
                    android:inputType="number"
                    android:maxLength="1"
                    android:maxLines="1"
                    android:padding="10dp"
                    android:textColor="#000000"
                    android:textColorHint="#808080"
                    android:textSize="17sp"
                    tools:ignore="TouchTargetSizeCheck" />

                <EditText
                    android:id="@+id/code5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/backgrounds_shapes"
                    android:ems="1"
                    android:gravity="center"
                    android:hint="0"
                    android:inputType="number"
                    android:maxLength="1"
                    android:maxLines="1"
                    android:padding="10dp"
                    android:textColor="#000000"
                    android:textColorHint="#808080"
                    android:textSize="17sp"
                    tools:ignore="TouchTargetSizeCheck" />

                <EditText
                    android:id="@+id/code6"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/backgrounds_shapes"
                    android:ems="1"
                    android:gravity="center"
                    android:hint="0"
                    android:inputType="number"
                    android:maxLength="1"
                    android:maxLines="1"
                    android:padding="10dp"
                    android:textColor="#000000"
                    android:textColorHint="#808080"
                    android:textSize="17sp"
                    tools:ignore="TouchTargetSizeCheck" />


            </LinearLayout>

            <Button
                android:id="@+id/continueBtn01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:minHeight="48dp"
                android:onClick="registerByPhone"
                android:text="Kayıt Ol"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:textAlignment="center"
                android:textStyle="bold"
                app:backgroundTint="#0060DA" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>