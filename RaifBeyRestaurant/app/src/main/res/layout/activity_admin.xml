<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.AdminActivity"
    android:gravity="center|top"
    android:orientation="vertical"
    android:background="#B6B6B6">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#000000"
        android:layout_marginTop="36dp"
        android:layout_marginBottom="36dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/gilroy_bold"
            android:padding="12dp"
            android:text="ADMİN PANELİ"
            android:textColor="@color/white"
            android:textSize="36dp" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/addProducts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#039109"
        android:layout_marginTop="24dp"
        app:cardCornerRadius="24dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ÜRÜN EKLE"
            android:fontFamily="@font/gilroy_bold"
            android:textSize="36dp"
            android:padding="12dp"
            android:textColor="@color/white"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/products"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#B10C0C"
        android:layout_marginTop="24dp"
        app:cardCornerRadius="24dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ÜRÜNLER"
            android:fontFamily="@font/gilroy_bold"
            android:textSize="36dp"
            android:padding="12dp"
            android:textColor="@color/white"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/purchaseConfirmation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#B66206"
        android:layout_marginTop="24dp"
        app:cardCornerRadius="24dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SATIN ALMA ONAYLA"
            android:fontFamily="@font/gilroy_bold"
            android:textSize="36dp"
            android:padding="12dp"
            android:textColor="@color/white"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/users"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#0314AC"
        android:layout_marginTop="24dp"
        app:cardCornerRadius="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/gilroy_bold"
            android:padding="12dp"
            android:text="KULLANICILAR"
            android:textSize="36dp"
            android:textColor="@color/white"/>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/goToApp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#AE9703"
        android:layout_marginTop="24dp"
        app:cardCornerRadius="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/gilroy_bold"
            android:padding="12dp"
            android:text="UYGULAMAYA GİT"
            android:textColor="@color/white"
            android:textSize="36dp" />
    </androidx.cardview.widget.CardView>

</LinearLayout>